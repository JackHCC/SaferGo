<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/search_bgc"
    tools:context="com.maintabs_secondpages.Maintabs_a_adduser">

    <EditText
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:layout_marginTop="50dp"
        android:background="@drawable/style_login_radius_drawable_bg"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="精准搜索好友用户名或邮箱" />
    <Button
        android:id="@+id/adduser_btn"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/search_bgc"
        android:background="@drawable/style_login_radius_drawable_bg"
        android:text="搜搜"/>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/adduser_name"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/style_login_radius_drawable_bg"
        android:drawablePadding="-50dp"
        android:textSize="28dp"
        android:text="搜索结果"
        android:drawableLeft="@drawable/btn_add"
        android:textColor="@color/search_bgc"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>




</LinearLayout>
