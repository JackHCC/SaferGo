<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maintabs_secondpages.Maintabs_c_bus"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="3dp"
    android:paddingTop="5dp">

    <!--标题-->

    <!--搜索框-->
    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/maintabs_c_bus_title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:floatingSearch_searchBarMarginLeft="0dp"
        app:floatingSearch_searchBarMarginTop="0dp"
        app:floatingSearch_searchBarMarginRight="0dp"
        app:floatingSearch_searchHint="Search..."
        app:floatingSearch_suggestionsListAnimDuration="250"
        app:floatingSearch_showSearchKey="false"
        app:floatingSearch_leftActionMode="showHamburger"
        app:floatingSearch_menu="@menu/menu_search"
        app:floatingSearch_close_search_on_keyboard_dismiss="true"/>




    <!--头部快捷功能-->
    <LinearLayout
        android:id="@+id/maintabs_c_bus_header_title"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@color/themeColor"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/maintabs_c_bus_title"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/maintabs_c_bus_header_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:text="公交查询"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/maintabs_c_bus_header_body"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/maintabs_c_bus_header_title"
        android:background="@color/themeColor"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/maintabs_c_bus_header_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/drawable_click_bg_change"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/maintabs_c_subway_header_logo1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="路线查询"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/maintabs_c_bus_header_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/drawable_click_bg_change"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/maintabs_c_bus_header_logo2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="充卡站点"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/maintabs_c_bus_header_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/drawable_click_bg_change"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/maintabs_c_bus_header_logo3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="旅行推荐"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/maintabs_c_bus_header_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/drawable_click_bg_change"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/maintabs_c_bus_header_logo4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="公交官网"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>



    <!--好友列表-->
    <LinearLayout
        android:id="@+id/maintabs_c_bus_body_title"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="@color/themeColor"
        android:layout_below="@+id/maintabs_c_bus_header_body"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/maintabs_c_subway_body_title"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/main_color_warm"
            android:text="全国查询"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/miantabs_bus_body_body_show2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="搜索"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/main_color_warm" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/maintabs_c_bus_footer"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/maintabs_c_bus_body_title"
        android:layout_marginTop="1sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--图吧-->
            <LinearLayout
                android:id="@+id/maintabs_c_bus_footer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/drawable_click_bg_change"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/maintabs_c_bus_footer_logo1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="18dp"
                    android:text="图吧公交"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--百度地图-->
            <LinearLayout
                android:id="@+id/maintabs_c_bus_footer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/drawable_click_bg_change"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/maintabs_c_bus_footer_logo2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="18dp"
                    android:text="百度地图"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--8684-->
            <LinearLayout
                android:id="@+id/maintabs_c_bus_footer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/drawable_click_bg_change"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/maintabs_c_bus_footer_logo3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="18dp"
                    android:text="8684公交"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--火车网-->
            <LinearLayout
                android:id="@+id/maintabs_c_bus_footer_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/drawable_click_bg_change"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/maintabs_c_bus_footer_logo4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="18dp"
                    android:text="火车网"
                    android:textSize="15sp" />
            </LinearLayout>

            <!--公交网-->
            <LinearLayout
                android:id="@+id/maintabs_c_bus_footer_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/drawable_click_bg_change"
                android:clickable="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/maintabs_c_bus_footer_logo5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="18dp"
                    android:text="公交网"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
</ScrollView>